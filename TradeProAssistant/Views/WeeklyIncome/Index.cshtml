    <div class="form-group row">
        @Html.LabelFor(x => x.Symbol, new { @class = "col-sm-2 col-form-label" })

        <div class="col-sm-10">
            @(Html.Kendo().ComboBoxFor(x => x.Symbol)
                                            .Placeholder("Select a security")
                                            .DataTextField("SymbolAndName")
                                            .DataValueField("Symbol")
                                            .HtmlAttributes(new { style = "width:100%;" })
                                            .Filter("contains")
                                            .AutoBind(false)
                                            .MinLength(2)
                                            .Delay(250)
                                            .DataSource(source =>
                                            {
                                                source.Read(read =>
                                                {
                                                    read.Action("GetSecurities", "Scanner");
                                                })
                                                .ServerFiltering(true);
                                            })
            )
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(x => x.Price, new { @class = "col-sm-2 col-form-label" })

        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Price, new { @class = "form-control-plaintext", Value = String.Format("{0:C}", Model.Price) })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-primary float-right">Lookup</button>
        </div>
    </div>
}
