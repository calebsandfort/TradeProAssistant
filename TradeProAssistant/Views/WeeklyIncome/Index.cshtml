                <div class="col-sm-10">
                    <input type="text" class="form-control" id="generatePlaySheetMaxRisk" name="generatePlaySheetMaxRisk" placeholder="Max Risk" value="15">
                </div>
            </div>
            <div class="form-group row" style="margin-bottom: 0;">
